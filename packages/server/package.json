{
    "name": "server",
    "description": "Serveur du projet de base pour le cours de LOG2990",
    "version": "1.1.0",
    "private": true,
    "scripts": {
        "start": "nodemon -L",
        "build": "rimraf out && tsc --project tsconfig.app.json",
        "format": "prettier --config ../.prettierrc.yaml --write \"app/**/*\"",
        "lint": "eslint -c .eslintrc.json \"./app/**/*.ts\" --format stylish --fix",
        "test": "cross-env TS_NODE_PROJECT='./tsconfig.spec.json' NODE_ENV=test dotenv -e .env.test mocha --config=.mocharc.json --node-env=test",
        "coverage": "cross-env TS_NODE_PROJECT='./tsconfig.spec.json' NODE_ENV=test dotenv -e .env.test nyc mocha --config=.mocharc.json --node-env=test --exit",
        "reset-db": "knex migrate:rollback && knex migrate:latest"
    },
    "nyc": {
        "check-coverage": true,
        "per-file": true,
        "lines": 80,
        "include": [
            "app/**/*.ts"
        ],
        "extension": [
            ".ts"
        ],
        "exclude": [
            "**/*.spec.ts",
            "app/index.ts",
            "app/server.ts",
            "app/app.ts",
            "**/*.const.ts",
            "app/services/database-service/database.service.ts"
        ],
        "require": [
            "ts-node/register",
            "tsconfig-paths/register"
        ],
        "reporter": [
            "html",
            "text",
            "cobertura"
        ],
        "all": true,
        "cache": true,
        "sourceMap": true,
        "instrument": true
    },
    "_moduleAliases": {
        "@app": "out/app/app",
        "@common": "out/common"
    },
    "dependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/mock-fs": "^4.13.1",
        "@types/seedrandom": "^3.0.5",
        "@types/uuid": "^8.3.4",
        "ajv": "^8.11.0",
        "bcryptjs": "^2.4.3",
        "cookie-parser": "1.4.5",
        "cors": "2.8.5",
        "debug": "^4.3.2",
        "envalid": "^7.3.1",
        "express": "~4.17.1",
        "express-validator": "^6.15.0",
        "firebase-admin": "^10.3.0",
        "http-status-codes": "^2.1.4",
        "jsonwebtoken": "^9.0.0",
        "knex": "^2.4.0",
        "mock-fs": "^5.1.2",
        "mockttp": "^2.7.0",
        "module-alias": "^2.2.2",
        "morgan": "^1.10.0",
        "node-fetch": "^2.6.7",
        "pg": "^8.8.0",
        "pg-mem": "^2.6.4",
        "prettier": "^2.3.2",
        "reflect-metadata": "^0.1.13",
        "seedrandom": "^3.0.5",
        "serve-favicon": "~2.5.0",
        "socket.io": "^4.4.1",
        "socket.io-client": "^4.4.1",
        "socket.io-mock": "^1.3.2",
        "swagger-jsdoc": "^6.1.0",
        "swagger-ui-express": "^4.1.6",
        "typedi": "^0.10.0",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@google-cloud/firestore": "^6.5.0",
        "@types/bcryptjs": "^2.4.2",
        "@types/body-parser": "1.19.1",
        "@types/chai": "^4.2.21",
        "@types/chai-as-promised": "^7.1.4",
        "@types/chai-spies": "^1.0.3",
        "@types/cookie-parser": "1.4.2",
        "@types/cors": "2.8.12",
        "@types/express": "4.17.13",
        "@types/jsonwebtoken": "^9.0.1",
        "@types/mocha": "^9.0.0",
        "@types/morgan": "~1.9.3",
        "@types/node": "^16.6.1",
        "@types/node-fetch": "^2.6.1",
        "@types/node-uuid": "0.0.29",
        "@types/sinon": "^10.0.2",
        "@types/supertest": "^2.0.11",
        "@types/swagger-jsdoc": "^6.0.1",
        "@types/swagger-ui-express": "^4.1.3",
        "@typescript-eslint/eslint-plugin": "^4.28.2",
        "@typescript-eslint/parser": "^4.28.2",
        "add": "^2.0.6",
        "chai": "~4.3.4",
        "chai-as-promised": "^7.1.1",
        "chai-spies": "^1.0.0",
        "cross-env": "^7.0.3",
        "dotenv-cli": "^6.0.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-import-resolver-typescript": "^2.4.0",
        "eslint-plugin-deprecation": "^1.2.1",
        "eslint-plugin-import": "^2.24.0",
        "eslint-plugin-jsdoc": "^36.0.7",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-unicorn": "^35.0.0",
        "mocha": "^9.0.3",
        "nodemon": "^2.0.12",
        "nyc": "^15.1.0",
        "openapi-types": "^10.0.0",
        "or": "^0.2.0",
        "rimraf": "3.0.2",
        "sinon": "^11.1.2",
        "source-map-support": "^0.5.19",
        "supertest": "^6.1.5",
        "ts-node": "^10.2.0",
        "ts-sinon": "^2.0.2",
        "tsconfig-paths": "^3.10.1",
        "typescript": "^4.3.5",
        "yarn": "^1.22.17"
    }
}
